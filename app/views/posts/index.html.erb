<h2 class="header">Member Posts</h2>
<% @posts.each do |post| %>
  <ul>
    <li>
      <% if member_signed_in? %>
        <p>Post Author: <%= post.member.name %> | <span>Posted <%= time_ago_in_words(post.created_at) %> ago. </span></p>
      <% else %>
        <p><em>Author name visible to Members only.</em></p>
      <% end %>
      <p class="post-content">
        <%= post.content %>
        <div>
          <% if current_member == post.member %>
            <%= link_to "delete", post, method: :delete,
                                        data: {test_id: "#{current_member.name}-post", 
                                        confirm: "Are you sure you want to delete this post?" } %>
          <% end %>
        </div>
      </p>
    </li>
  </ul>
<% end %>
